{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./build/types",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
